{{#each meals}}
  <div class="meal">
    <h2>{{name}}</h2>
    <img src="images/{{filename}}" alt="">
    <p>{{description}}</p>
    {{#if ingredients}}
      <h3>Ingredients:</h3>
      <ul>
        {{#each ingredients}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No ingredients listed.</p>
    {{/if}}
    <p>{{instructions}}</p>
    <p>Protein: {{protein}}g</p>
    <p>Fat: {{fat}}g</p>
    <p>Carbs: {{carbs}}g</p>
    <p>Calories: {{calories}}</p>
  </div>
{{/each}}