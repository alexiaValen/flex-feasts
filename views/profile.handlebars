<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Recipe:</h3>

    <form class="form new-meal-form" action="/create" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="recipe">Recipe name:</label>
        <input class="form-input" type="text" id="recipe" name="recipe" />
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-input" id="description" name="description"></textarea>
      </div>
      <div class="form-group">
        <label for="prep-time">Prep time:</label>
        <input class="form-input" type="text" id="prep-time" name="prep-time" />
      </div>
      <div class="form-group">
        <label for="cook-time">Cook time:</label>
        <input class="form-input" type="text" id="cook-time" name="cook-time" />
      </div>
      <div class="form-group">
        <label for="ingredients">Ingredients:</label>
        <textarea class="form-input" id="ingredients" name="ingredients"></textarea>
      </div>
      <div class="form-group">
        <label for="instructions">Instructions:</label>
        <textarea class="form-input" id="instructions" name="instructions"></textarea>
      </div>
      <div class="form-group">
        <label for="protein">Protein:</label>
        <input class="form-input" type="text" id="protein" name="protein" />
      </div>
      <div class="form-group">
        <label for="fat">Fat:</label>
        <input class="form-input" type="text" id="fat" name="fat" />
      </div>
      <div class="form-group">
        <label for="carbs">Carbs:</label>
        <input class="form-input" type="text" id="carbs" name="carbs" />
      </div>
      <div class="form-group">
        <label for="calories">Calories:</label>
        <input class="form-input" type="text" id="calories" name="calories" />
      </div>
      <div class="form-group">
        <label for="category">Category:</label>
        <select class="form-input" id="category" name="category">
          <option value="">--Select--</option>
          <option value="1">Vegetarian</option>
          <option value="2">Vegan</option>
          <option value="3">Gluten-Free</option>
          <option value="4">Pescatarian</option>
          
        </select>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>

  {{#if meals.length}}
  <div class="col-md-6 meals-list">
    <h3>Current Recipes:</h3>

    {{#each meals as |meal|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/meal/{{meal.id}}">{{meal.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{meal.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
